              | Cakes for Diabetic Patient
    section#catagoryFlavour.section-catagoryFlavour
      .container
        h2.heading-secondary Choose Your Flavorful Delight
        .flavour-cat-btns
          .btn-filter
            p Filter
            svg.icon-filter
              use(xlink:href='img/ssg.svg#filter-icon')
          .btn-mid.cat-btn Chocolate
          .btn-mid.cat-btn Black Forest
          .btn-mid.cat-btn Butterscotch
          .btn-mid.cat-btn Pineapple
          .btn-mid.cat-btn Turffie
          .btn-mid.cat-btn Red Velvet
          .btn-mid.cat-btn Fresh Fruit
          .btn-mid.cat-btn Vanilla
        .grid.grid--4-col.all-flavour-carts
          //- Flavour cart -1
          each cake in cakes
            a.flavour-cart.cake-card-link(href=`/cake/${cake.slug}`)
              img.flavour-cake-img(src=`img/falvoured-cake/${cake.coverImage}` alt=`image of a ${cake.name} form our shop`)
              .cake-title-box
                .tag-outline.tag-vegB
                  .tag-circle.tag-veg-bg
                .cake-title= cake.name
              .cake-price-box
                p &#x20B9;
                p.cakePrice-value= cake.price
              .cake-rating-box
                .RAI
                  .rating-value= cake.ratingAvarage
                  svg.icon-rating
                    use(xlink:href='img/ssg.svg#star')
                  // <ion-icon name="star" class="rating-icon"></ion-icon>
                .numberOfPeole=  `(${cake.ratingQuantity})`
                button.add-to-cart Add &plus;
        .center-text
          span.all-cake-btn See all cakes &rarr;
